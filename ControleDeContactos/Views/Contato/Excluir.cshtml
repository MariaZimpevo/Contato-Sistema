@model ContatoModel
@{
    ViewData["Title"] = "Apagar Contacto";
}

<div class="text-center">
    <h3>Deseja realmente apagar o contacto(@Model.Nome)</h3>
</div>
<a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Index">Não</a>
<a class="btn btn-danger" asp-action="Apagar" asp-controller="Contato" asp-route-id="@Model.Id" role="button"> Sim </a>
