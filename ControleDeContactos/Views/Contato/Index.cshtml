@model List<ContatoModel>
@{
    ViewData["Title"] = "Lista de Contactos";
}
<div class="text-center">
    <div class="text-left">
        <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Criar">
            Criar Contacto
        </a>
    </div>
    <br />
    <div class="alert alert-primary" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        A simple primary alert—check it out!
    </div>
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        A simple danger alert—check it out!
    </div>

    <h1 class="display-4"> Lista de Contactos</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Telefone</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ContatoModel contato in Model)
                {
            <tr>
                <th scope="row">@contato.Id</th>
                <td>@contato.Nome</td>
                <td>@contato.Email</td>
                <td>@contato.Telefone</td>
                <td>
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-primary" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Editar">Editar</a>
                        <a role="button" class="btn btn-danger" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Excluir">Excluir</a>
                    </div>
                </td>
            </tr>
                }
            }
        </tbody>
    </table>
</div>
