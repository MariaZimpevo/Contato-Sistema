@model ContatoModel
@{
    ViewData["Title"] = "Editar Contactos";
}
<div class="text-center">
    <h1 class="display-4"> Editar Contactos</h1>
</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">

    <input type ="hidden" asp-for="Id" /> 
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o Nome do Contacto">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email do Contacto">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="telefone">Telefone</label>
        <input type="text" asp-for="Telefone" class="form-control" placeholder="Digite o Nome do Contacto">
        @Html.ValidationMessageFor(x => x.Telefone)
    </div>
    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>
